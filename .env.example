# OpenRouter configuration
USE_OPENROUTER=true
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-opus-4.5

# Execution toggles
ENABLE_HID=false
ENABLE_SEMANTIC=false
ENABLE_SHELL=false
LOG_LEVEL=INFO
ENCODE_FORMAT=JPEG

# Loop limits and pacing
MAX_STEPS=50
MAX_FAILURES=5
MAX_WALL_CLOCK_SECONDS=0
VERIFY_DELAY_MS=200

# Shell sandbox settings
SHELL_WORKSPACE_ROOT=.agent_shell
SHELL_MAX_RUNTIME_S=10
SHELL_MAX_OUTPUT_BYTES=65536
# Comma-separated allowlist (basenames) to extend defaults
SHELL_ALLOWED_COMMANDS=ls,echo,grep,wc,git

